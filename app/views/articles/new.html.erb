<div class="row article-new">
		<div class="col-md-6 col-xs-6 col-xs-offset-3 col-md-offset-3">
			<%= form_for [current_user, @article] do |f| %>
			
			<%= f.label :title %>
			<%= f.text_field :title, class: 'form-control', id: "article-title" %></br>

			<%= f.label :content %>
			<%= f.text_area :content, class: "redactor", rows: 60, cols: 100 %></br>

			<%= f.submit "確認送出", class: "btn btn-default btn-custom" %>
			<% end %>
		</div>
	</div>