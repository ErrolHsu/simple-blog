<% provide(:title, "#{@article.title}") %>
<div class="row article-show-page">
  <%= render 'shared/flash' %>
  <div class="col-md-10 col-xs-12 col-md-offset-1 article-show-content">
	  <h4 class="article-show-page-title"><%= @article.title %></h4>
		<%= raw @article.content %>
		<div class="article-show-tags">
      <span class="glyphicon glyphicon-tags"></span>
      <%= raw article_tags(@article.tags) %>
    </div>
  </div>
  <div class="col-md-12 col-xs-12" id="return">
    <%= link_to "回上頁", request.referer %>
  </div>
</div>

<div id="disqus_thread"></div>
<script type="text/javascript">
    /* * * CONFIGURATION VARIABLES * * */
    var disqus_shortname = 'nooffy';
    
    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
</script>
