<% provide(:title, "#{blog_title_now}") %>
<%= render 'shared/flash' %>

<div id="gravatar_for_showpage">
  <h1><%= gravatar_for(@user, size: 130) %></h1>
</div>

<div class="row">
	<div class="col-md-9 col-xs-10 col-xs-offset-0 col-md-offset-1">
			
		
		<div id="icon-plus"><%= correct_icon_link %></div>
		
		<% @articles.each do |article| %>
		<div class="user-article-show">
			<div class="user-article-title">
			  <%= link_to article.title, user_article_path(@user, article)%>
			  <span class="glyphicon glyphicon-tag"></span>
		  </div>
			<HR class="dark-hr">
			<%= raw article.content.truncate(850) %></pre><br>
			<%= link_to "Read more..", user_article_path(@user, article), 
														class: "btn btn-default btn-custom" %><br>
			<div class="created-at">
				<%= article.created_at.to_s(:month_day_year) %>
			</div>
		</div>
		<% end %>
	</div>
</div>


<div class="pagi">
<h4><%= paginate @articles, :window => 2 %><h4>
</div>
