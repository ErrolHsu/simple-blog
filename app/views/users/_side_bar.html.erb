<div class="row">
	<div class="col-md-12 col-sm-12 col-xs-5" id="box-1">
    <div>工事中....</div>
  </div>
  <div class="col-md-12 col-sm-12 col-xs-7" id="box-2">
    <%= link_to about_me_user_path(@user) do %>
      <%= content_tag(:div, "About", id: "box-2-1") %>
    <% end %> 
    <%= link_to user_articles_path(@user) do %>
      <%= content_tag(:div, id: "box-2-2") do%>
        <span class= "glyphicon glyphicon-book"></span>
        <%= content_tag(:span, "Blog Archive") %>
      <% end %>
    <% end %>    
  </div>

  <div class="col-md-11 col-sm-11 col-xs-5 hidden-xs box-hidden">
  </div>

  <%= show_link_if(current_user?(@user), "#", class: "col-md-12 col-sm-12 col-xs-12", 
    id:"todo-form-controller") do %>
    <span class="glyphicon glyphicon-plus"></span>
    <span>New Event</span>
  <% end %>  

  <div class="col-md-12 col-sm-12 col-xs-12" id="todo-form">
    <%= render 'todo_events/form' %>
  </div>  

  <div class="col-md-12 col-sm-12 col-xs-12" id="calendar">
    <%= render 'calendar/calendar' %>
  </div>

  <div class="col-md-12 col-sm-12 hidden-xs" id="box-3">
		<div id="tags">
			<span class="glyphicon glyphicon-tags"></span>TAGS
		</div>
		<div class="user-show-tags">
			<%= render partial: 'shared/tags', collection: @tags, as: :tag %>
	  </div>
  </div>
</div> 